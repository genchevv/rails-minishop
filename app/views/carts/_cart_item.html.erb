<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-8">
      <h4><%= product.title %></h4>
    </div>
    
    <div class="col-md-4">
      <%= form_for order_item, remote: true do |f| %>
        <%= product.price %>
        <%= f.number_field :quantity, value: order_item.quantity.to_i, min: 1 %>
        <%= f.hidden_field :product_id, value: product.id %>
        
        <%= f.submit "Update Quantity", class: 'btn btn-primary' %>
        <%= link_to "Remove from cart", order_item, method: :delete, data: { confirm: "Are you sure you want to remove this item from the cart?" } %>
      <% end %>
    </div>
  </div>
</div>